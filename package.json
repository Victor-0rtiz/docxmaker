{
  "name": "docxmaker",
  "version": "0.0.1",
  "description": "A lightweight library to generate DOCX documents from JSON definitions.",
  "author": "oss-dev",
  "license": "MIT",
  "keywords": ["docx", "docx generator", "typescript"],
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --out-dir dist"
  },
  "peerDependencies": {
    "jszip": "^3.10.1",
    "xmlbuilder2": "^3.1.1"
  },
  "devDependencies": {
    "@types/jszip": "^3.4.0",
    "@types/node": "^24.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3"
  }
}